{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "eqeqeq": "error", 
    "no-eval": "error", 

    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],

    "arrow-spacing": "error",
    "no-var": "error",
    "prefer-const": "error"
  }
}
